@model Rivo_Nidhi.Model.Gold_Fixed_Deposit

@{
    ViewBag.Title = "GFDWithdraw";
}

<h2>GFDWithdraw</h2>

<div>
    <hr />
    <div class="container">
        <h2 align="center">GFD WithDrawal</h2>
        <div class="panel panel-default">
            <div class="panel-heading">
                <div align="center">
                    @using (Html.BeginForm())
                    {
                        <div class="card">
                            @*<div class="card-header">
                                    <h4 class="card-title">Details</h4>
                                </div>*@
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label><b>Account Number</b></label>
                                            <p> @Html.DisplayFor(model => model.Acc_no)</p>
                                        </div>
                                        <div class="form-group">
                                            <label><b>Name</b></label>
                                            <p>@Html.DisplayFor(model => model.Name)</p>
                                        </div>
                                        <div class="form-group">
                                            <label><b>For the number of month</b></label>
                                            <p>@Html.DisplayFor(model => model.Tenure)</p>
                                        </div>
                                        <div class="form-group">
                                            <label><b>With the Rate of</b></label>
                                            <p>@Html.DisplayFor(model => model.Intrst_rate)</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label><b>Invested Amount</b></label>
                                            <p>@Html.DisplayFor(model => model.Total_amount)</p>
                                        </div>
                                        <div class="form-group">
                                            <label><b>Investing Date</b></label>
                                            <p>@Html.DisplayFor(model => model.Date)</p>
                                        </div>
                                        <div class="form-group">
                                            <label><b>Maturity Amount After Maturity Date</b></label>
                                            <p> @Html.DisplayFor(model => model.Maturity_amount)</p>
                                        </div>
                                        <div class="form-group">
                                            <label><b>Maturity Date</b></label>
                                            <p> @Html.DisplayFor(model => model.Maturity_date)</p>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="card">
                        @using (Html.BeginForm("GFDWithdraw", "GFD_Details", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Gfd_id)
                            @Html.HiddenFor(model => model.Status)
                            @Html.HiddenFor(model => model.Maturity_date)

                            @Html.Raw(TempData["msg"])
                            <input type="submit" value="CloseGFD" class="btn btn-danger" />
                        }
                    </div>

                </div>
            </div>
            <div class="panel panel-default">

            </div>
        </div>
    </div>

    </div>
    <p>
        @Html.ActionLink("Back to List", "GFD_Index")
    </p>
